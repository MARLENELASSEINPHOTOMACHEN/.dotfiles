// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // "j k": ["workspace::SendKeystrokes", "escape"]
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      // Put key bindings here if you want them to work in normal & visual mode.

      // === Go To Actions (matching your Neovim gr* keymaps) ===

      // grn -> Rename (LSP rename, like vim.lsp.buf.rename)
      "g r n": "editor::Rename",

      // gra -> Code Action (like vim.lsp.buf.code_action)
      "g r a": "editor::ToggleCodeActions",

      // grr -> Go to References (like telescope lsp_references)
      "g r r": "editor::FindAllReferences",

      // gri -> Go to Implementation (like telescope lsp_implementations)
      "g r i": "editor::GoToImplementation",

      // grd -> Go to Definition (like telescope lsp_definitions)
      "g r d": "editor::GoToDefinition",

      // grD -> Go to Declaration (like vim.lsp.buf.declaration)
      "g r D": "editor::GoToDeclaration",

      // grt -> Go to Type Definition (like telescope lsp_type_definitions)
      "g r t": "editor::GoToTypeDefinition",

      // gO -> Document Symbols (like telescope lsp_document_symbols)
      "g O": "outline::Toggle",

      // gW -> Workspace Symbols (like telescope lsp_dynamic_workspace_symbols)
      "g W": "project_symbols::Toggle"
    }
  },
  {
    "context": "vim_mode == normal && !menu",
    "bindings": {
      "g h": "editor::ShowSignatureHelp",

      // === Git Hunk Navigation (like ]h / [h in Neovim) ===
      "] h": "editor::GoToHunk",
      "[ h": "editor::GoToPrevHunk",

      // === Git Blame Toggle (like <leader>tb) ===
      "space t b": "editor::ToggleGitBlame",

      // === Search Keymaps (matching your Neovim <leader>s* keymaps) ===

      // <leader>sf -> Search Files
      "space s f": "file_finder::Toggle",

      // <leader>sg -> Search by Grep (live grep)
      "space s g": "pane::DeploySearch",

      // <leader>sw -> Search current Word
      "space s w": "pane::DeploySearch",

      // <leader>sd -> Search Diagnostics
      "space s d": "diagnostics::Deploy",

      // <leader>sh -> Search Help (Zed docs)
      "space s h": "zed::OpenDocs",

      // <leader>sk -> Search Keymaps
      "space s k": "zed::OpenKeymap",

      // <leader>s. -> Search Recent Files (oldfiles)
      "space s .": "projects::OpenRecent",

      // <leader><leader> -> Find existing buffers
      "space space": "tab_switcher::Toggle",

      // <leader>/ -> Fuzzy search in current buffer
      "space /": "buffer_search::Deploy",

      // <leader>sr -> Search Resume (reopen last search)
      "space s r": "project_search::ToggleFocus",

      // === Code Actions ===
      "space c f": "editor::Format",
      "space c w": "workspace::SaveWithoutFormat",
      "space r n": "editor::Rename",
      "space c a": "editor::ToggleCodeActions"

      // "shift-y": ["workspace::SendKeystrokes", "y $"] // Use neovim's yank behavior: yank to end of line.
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore" // In insert mode, make jk escape to normal mode.
    }
  },
  {
    "context": "EmptyPane || SharedScreen",
    "bindings": {
      // Put key bindings here (in addition to the context above) if you want them to
      // work when no editor exists.
      "space s f": "file_finder::Toggle"
    }
  }
]
